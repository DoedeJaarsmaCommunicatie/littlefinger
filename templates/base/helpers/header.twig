{% from "macro/sites.twig" import sites_list %}

{% block header_topper %}
<!-- Header topper -->
<header class="header" role="banner">
    <div class="container mx-auto">
        <button role="button" class="js-menu-open">
            <span class="lg:bulbed">
                <i class="fas fa-store"></i>
            </span>
            <span class="not-mobile">{{ theme.theme_mod('header_store-text', 'Al onze winkels') }}</span>
        </button>

        <nav class="top-navigation" role="navigation">
            <a class="top-nav-item" href="{{ fn('get_permalink', fn('get_option', 'woocommerce_myaccount_page_id')) }}">
                <span class="lg:bulbed">
                    <i class="fas fa-user"></i>
                </span>
                <span class="not-mobile">{{ theme.theme_mod('my_account-text', 'Mijn account') }}</span>
            </a>

            <a href="{{ fn('wc_get_cart_url') }}" class="top-nav-item has-badge">
                <span class="lg:bulbed">
                    <i class="fas fa-shopping-basket"></i>
                </span>
                <span class="not-mobile">{{ theme.theme_mod('winkelmand-text', 'Winkelmandje') }}</span>
                <span class="badge top right white js-cart-amount" data-amount="{{ wc_cart_count }}">{{ wc_cart_count }}</span>
            </a>
        </nav>
    </div>
</header>

{% endblock %}

{% block flyout_stores %}
<!-- All stores flyout menu -->
<nav class="shop-container-slider">
    <div class="shops-wrapper">
        <h3>Al onze shops</h3>
        <div class="flex flex-col">
            {{ sites_list(sites) }}
        </div>
    </div>
</nav>

{% endblock %}

{% block header_bar %}
<!-- Header bar -->
<section class="logo-header">
    <div class="container mx-auto py-2 px-4 lg:px-0 ">
        {% set _logo = Image(theme.theme_mod('custom_logo')) %}
        <a href="/">
            <img src="{{ _logo.src }}" alt="{{ _logo.alt?? 'LOGO ' ~ site.name }}" class="custom_logo" id="logo_{{ post.ID }}" />
        </a>
    </div>
</section>

{% endblock %}

{% block kiyoh_banner %}
<!-- Kiyoh Banner -->
<section class="container mx-auto py-8 flex">
    {% include 'partials/blocks/kiyoh.twig' %}
    <nav class="lg:w-3/5 shop-container">
        <div class="shops-wrapper">
            <h3>Al onze shops</h3>
            <div class="columned-sites">
                {{ sites_list(sites)}}
            </div>
        </div>
    </nav>
</section>
{% endblock %}

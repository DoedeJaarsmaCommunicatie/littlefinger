{% from "macro/search_form.twig" import search_form %}

<!-- Header bar -->
<section class="logo-header">
    <div class="container mx-auto py-2 px-4 lg:px-0 lg:flex">
        {% set _logo = Image(theme.theme_mod('custom_logo')) %}
        <a href="/" class="custom-logo-wrapper">
            <img src="{{ _logo.src|resize(350) }}" alt="{{ _logo.alt?? 'LOGO ' ~ site.name }}" class="custom_logo" id="logo_{{ post.ID }}" />
        </a>
        {% if stramien_large %}
            {% include 'partials/header/navbar.html.twig' %}
        {% endif %}
        {{ search_form(search_placeholder) }}
    </div>
</section>

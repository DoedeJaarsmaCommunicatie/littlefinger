{% set _product = fn('wc_get_product', product.ID) %}
{% from "macro/add-to-cart.twig" import add_to_cart %}

<article class="product-card">
    <span class="product-label">&euro; {{ _product.get_price }}</span>
    <a href="{{ product.link }}" class="product-image-wrapper">
        <img src="{{ product.thumbnail.src('medium') }}" alt="{{ product.thumbnail.alt }}" class="product-image">
    </a>
    <h2 class="product-title">
        <a href="{{ product.link }}">{{ product.name }}</a>
    </h2>
    <div class="product-content content">
        {{ product.content|excerpt(15) }} <a href="{{ product.link }}">Lees meer</a>
    </div>
    {{ add_to_cart(product.ID, 'ml-auto mt-auto product-add-to-cart', 'qty', 'small') }}
</article>

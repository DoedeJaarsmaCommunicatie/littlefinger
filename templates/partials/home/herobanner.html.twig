<!-- Hero banner -->
<section class="frontpage-hero {{ fn('is_front_page')? 'home': 'not_home' }}" style="background-image: url('{{ hero_image }}')">
    <div class="container mx-auto">
        {% if stramien_large %}
            <h2 class="frontpage-hero--large-title">{{ title }}</h2>
            <h3 class="frontpage-hero--large-subtitle">{{ subtitle }}</h3>

            <section class="lg:w-1/3">
                <div id="filter-app"></div>
            </section>
        {% else %}
            {% include 'partials/home/hero-product.twig' with { product: featured, title: title } only %}
        {% endif %}
    </div>
    <aside class="usp-banner">
        <div class="container mx-auto lg:flex lg:justify-around">
            <small class="usp-banner--item"><i class="fas fa-store-alt"></i> {{ theme.theme_mod('more_shops', 'Bestellen bij meerdere webshops.') }}</small>
            <small class="usp-banner--item"><i class="fas fa-truck"></i> {{ theme.theme_mod('shipping_fee') }}</small>
            <small class="usp-banner--item"><i class="fas fa-dolly"></i> {{ theme.theme_mod('delivery_time')}}</small>
        </div>
    </aside>
</section>


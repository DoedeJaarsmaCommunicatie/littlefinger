{% extends 'base/app.twig' %}

{% block content %}
    <section class="frontpage-hero" style="background-image: url('{{ Image(post.get_field('hero_image')).src('large') }}')">
        <div class="container mx-auto">
            {% include 'partials/home/hero-product.twig' with { product: featured, title: post.get_field('title') } only %}
        </div>
        <aside class="usp-banner">
            <small><i class="fas fa-truck"></i> {{ theme.theme_mod('shipping_fee') }}</small>
            <small><i class="fas fa-dolly"></i> {{ theme.theme_mod('delivery_time')}} </small>
        </aside>
    </section>

    <section class="container mx-auto py-8 flex">
        {% include 'partials/blocks/kiyoh.twig' %}
        <nav class="w-2/5 shop-container">

            <h3>Al onze shops</h3>
            {% for site in sites %}

            {% endfor %}
        </nav>
    </section>

    <div class="">
        {{ post.content }}
    </div>
{% endblock %}
